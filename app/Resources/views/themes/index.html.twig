{% extends 'adminbase.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Dodate teme</h2>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Link za pregled</th>
                            <th>Naziv</th>
                            <th>Opis</th>
                            <th>Dodato</th>
                            <th>ScreenShoot</th>
                            <th>Akcija</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for theme in themes %}
                        <tr>
                            <td>{{ theme.id }}</td>
                            <td>{{ theme.previewlink }}</td>
                            <td>{{ theme.name }}</td>
                            <td>{{ theme.description }}</td>
                            <td>{% if theme.createdAt %}{{ theme.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>
                                <img src="{{ asset('bundles/app/upload/themes/') }}{{ theme.previewImg }}" height="60" width="60" />
                            </td>
                            <td>
                                <a class="btn btn-warning" href="{{ path('admin_teme_show', { 'id': theme.id }) }}"><i class="icon-eye-open"></i></a>
                                <a class="btn btn-info" href="{{ path('admin_teme_edit', { 'id': theme.id }) }}"><i class="icon-edit"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    </div>
</div>


<a class="btn btn-success" href="{{ path('admin_teme_new') }}">+ Dodaj novu temu</a>

{% endblock %}
