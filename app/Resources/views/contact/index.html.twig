{% extends 'adminbase.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Primljene poruke sa sajta</h2>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Ime i prezime</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Poruka</th>
                            <th>Stiglo</th>
                            <th>Akcija</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for contact in contacts %}
                        <tr {% if contact.isRead == 0 %} style="color: orange;" {% endif %}>
                            <td>{% if contact.isRead == 0 %}<span class="badge">NOVO</span>{% endif %}</td>
                            <td>{{ contact.name }}</td>
                            <td>{{ contact.email }}</td>
                            <td>{{ contact.phone }}</td>
                            <td>{{ contact.massege }}</td>
                            <td>{% if contact.createdAt %}{{ contact.createdAt|date('d-m-Y H:i:s') }}{% endif %}</td>
                            <td>
                                <a class="btn btn-info" href="{{ path('admin_contact_show', { 'id': contact.id }) }}"><i class="icon-eye-open"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
