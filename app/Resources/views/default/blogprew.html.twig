{% extends 'blogbase.html.twig' %}
{% block title %} {{ news.name }}{% endblock %}
{% block body %}

    <div class="row blogback">
        <div class="container">
            <br/>
            <br/>
            <br/>
            <br/>
            <h1>{{ cat }} <small style="color: #fff;">{{ news.name }}</small></h1>
            <br/>
            <br/>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-12 col-lg-offset-2 col-md-offset-2 col-sm-offset-2" style="background: #fff;">
                    <img class="one-blog-img" src="{{ asset('bundles/app/upload/blog/') }}{{ news.blogImg }}" />
                    <br/>
                    <h1>{{ news.name }}</h1>
                    <span><i class="icon-eye-open"></i> {{ news.views }} | <i class="icon-time"></i> {% if news.createdAt %}{{ news.createdAt|date('d-m H:i') }}{% endif %}</span>
                    <br/><br/>
                    <p>{{ news.blogTxt }}</p>
                    <br/>
                    <br/>
                    <p>Više o ovome možete pogledati <a href="{{ news.link }}">ovde</a>.</p>
                    <br/>
                    {% if news.videoLink != "" %}
                        {% set videoId = news.videoLink|split('=') %}
                        {% if videoId|length > 1 %}
                            <h3>Video:</h3>
                           <center>
                               <iframe width="420" height="315"
                                    src="https://www.youtube.com/embed/{{ videoId[1] }}">
                                </iframe>
                           </center>
                        {% endif %}
                    {% endif %}
                </div>
        </div>
        <br/>
        <br/>
        <br/>
    </div>

{% endblock %}