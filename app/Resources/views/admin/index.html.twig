{% extends 'adminbase.html.twig' %}
{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h2>Dobro dosli</h2>
        </div>
    </div>
    <hr />
    <div class="container">
            <div class="col-md-9 col-sm-9 col-lg-9 col-xs-9">
                <input class="form-control post_content" type="text" name="new_post" placeholder="Nova objava..." />
            </div>
            <div class="col-md-3 col-sm-3 col-lg-3 col-xs-3">
                <input type="submit" class="btn btn-success form-control post_btn" value="+ Dodaj" />
            </div>
        <div class="clearfix"></div>
    </div>
    <hr/>
    <h3 class="post-head">Objave - taskovi</h3>
    <div class="container list_of_posts" style="padding: 0 30px">
        {% for p in post|sort|reverse %}
            <div class="one-post">
                <h3><i class="icon-user"></i> {{ p.user }}</h3>
                <br/>
                <p>{{ p.post }}</p>
                <span class="label label-default">{{ p.createdAt|date('d-m-Y H:i') }}</span>
                <span data-id="{{ p.id }}" class="post-del">x</span>
            </div>
        {% endfor %}
    </div>
{% endblock %}