{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ordersite</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ orderSite.id }}</td>
            </tr>
            <tr>
                <th>Theme</th>
                <td>{{ orderSite.theme }}</td>
            </tr>
            <tr>
                <th>Domen</th>
                <td>{{ orderSite.domen }}</td>
            </tr>
            <tr>
                <th>Host</th>
                <td>{{ orderSite.host }}</td>
            </tr>
            <tr>
                <th>Socialn</th>
                <td>{{ orderSite.socialn }}</td>
            </tr>
            <tr>
                <th>Material</th>
                <td>{{ orderSite.material }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ orderSite.description }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ orderSite.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ orderSite.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ orderSite.phone }}</td>
            </tr>
            <tr>
                <th>Isread</th>
                <td>{% if orderSite.isRead %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if orderSite.createdAt %}{{ orderSite.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ordersite_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('ordersite_edit', { 'id': orderSite.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
