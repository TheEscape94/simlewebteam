{% extends 'adminbase.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Tekstovi na blogu</h2>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Naslov</th>
                            <th>Tekst</th>
                            <th>Slika</th>
                            <th>YT link</th>
                            <th>Link</th>
                            <th>Pregledi</th>
                            <th>Dodato</th>
                            <th>Akcija</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for blog in blogs %}
                        <tr>
                            <td>{{ blog.id }}</td>
                            <td>{{ blog.name }}</td>
                            <td>{{ blog.blogTxt }}</td>
                            <td>
                                <img src="{{ asset('bundles/app/upload/blog/') }}{{ blog.blogImg }}" alt="" height="80" width="80" />
                            </td>
                            <td>{{ blog.ytLink }}</td>
                            <td>{{ blog.link }}</td>
                            <td>{{ blog.views }}</td>
                            <td>{% if blog.createdAt %}{{ blog.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>
                                <a class="btn btn-warning" href="{{ path('admin_blog_show', { 'id': blog.id }) }}"><i class="icon-eye-open"></i></a>
                                <a class="btn btn-info" href="{{ path('admin_blog_edit', { 'id': blog.id }) }}"><i class="icon-edit"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                </div>
            </div>
        </div>
    </div>
</div>
    <a class="btn btn-success" href="{{ path('admin_blog_new') }}">+ Dodaj novi tekst</a>

{% endblock %}
