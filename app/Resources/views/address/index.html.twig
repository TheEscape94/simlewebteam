{% extends 'adminbase.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="pull-left">Adresar</h2>
                <a class="btn btn-success pull-right" href="{{ path('admin_adresar_new') }}">+ Dodaj novog korisnika</a>
                <div class="clearfix"></div>
            </div>
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover text-center" id="dataTables-example">
                    <thead>
                        <tr>
                            <th><i class="icon-phone" style="padding-right: 15px;"></i></th>
                            <th>Ime</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Grad</th>
                            <th>Dodato</th>
                            <th><i class="icon-file"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for address in addresses %}
                        <tr>
                            <td class="checkbox_called{{ address.id }}">
                                {% if address.called == 0 %}
                                    <input type="checkbox" name="called" data-id="{{ address.id }}" class="is_called" />
                                    <span style="display: none">0</span>
                                {% else %}
                                    <i class="icon-check text-success"></i>
                                    <span style="display: none">1</span>
                                {% endif %}
                            </td>
                            <td>{{ address.name }}</td>
                            <td>{{ address.email }}</td>
                            <td>{{ address.phone }}</td>
                            <td>{{ address.city }}</td>
                            <td>
                                {{ address.addedBy }}<br/>
                                <small>{% if address.createdAt %}{{ address.createdAt|date('d.m.Y. H:i') }}{% endif %}</small>
                            </td>
                            <td>
                                <a class="btn btn-warning" href="{{ path('admin_adresar_show', { 'id': address.id }) }}"><i class="icon-eye-open"></i></a>
                                <a class="btn btn-info" href="{{ path('admin_adresar_edit', { 'id': address.id }) }}"><i class="icon-edit"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
    <a class="btn btn-success" href="{{ path('admin_adresar_new') }}">+ Dodaj novog korisnika</a>
{% endblock %}
